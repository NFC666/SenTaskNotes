<UserControl x:Class="SenNotes.Components.NoStyleTextBox"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:SenNotes.Components"
             mc:Ignorable="d"
             x:Name="Root"
             d:DesignHeight="300" d:DesignWidth="300">
  <UserControl.Resources>
    <Style x:Key="CleanTextBoxStyle" TargetType="TextBox">
      <Setter Property="Background" Value="Transparent" />
      <Setter Property="BorderThickness" Value="0" />
      <Setter Property="Foreground" Value="White" />
      <Setter Property="CaretBrush" Value="White" />
      <Setter Property="FontWeight" Value="ExtraBold" />
      <Setter Property="FontSize" Value="15" />
      <Setter Property="FocusVisualStyle" Value="{x:Null}" />
    </Style>
  </UserControl.Resources>
  <StackPanel>
    <TextBlock Text="{Binding Header,ElementName=Root}" FontSize="15"/>
    <Grid>
      <TextBox 
        Style="{StaticResource CleanTextBoxStyle}"
        Text="{Binding Text ,ElementName=Root}"
        Foreground="{Binding Foreground,ElementName=Root}"
      />
      <Border BorderBrush="White" BorderThickness="1" VerticalAlignment="Bottom"/>
    </Grid>
  </StackPanel>
</UserControl>
