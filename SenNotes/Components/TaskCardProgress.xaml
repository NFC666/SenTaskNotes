<UserControl x:Class="SenNotes.Components.TaskCardProgress"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:converter="clr-namespace:SenNotes.Converter"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:SenNotes.Components"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             x:Name="Root"
             d:DesignHeight="100"
             d:DesignWidth="300"
             mc:Ignorable="d">
  <UserControl.Resources>
    <converter:DateTimeConverter x:Key="DateTimeConverter" />
    <Style TargetType="TextBlock">
      <Setter Property="Foreground" Value="White" />
    </Style>
  </UserControl.Resources>
  <Grid>
    <StackPanel VerticalAlignment="Center">
      <DockPanel LastChildFill="False">
        <TextBlock Text="{Binding ProgressStartTime
                        , ElementName=Root
                        , Converter={StaticResource DateTimeConverter}}" />
        <TextBlock DockPanel.Dock="Right"
                   Text="{Binding ProgressStopTime
                        , ElementName=Root
                        , Converter={StaticResource DateTimeConverter}}" />
      </DockPanel>
      <ProgressBar Margin="0,5"
                   Background="Transparent"
                   BorderBrush="Transparent"
                   Foreground="White"
                   Value="{Binding Value, ElementName=Root}" />
    </StackPanel>
  </Grid>
</UserControl>